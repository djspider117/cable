<UserControl x:Class="Cable.App.Views.Controls.NodeEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cable.App.Views.Controls"
             mc:Ignorable="d" 
             Background="#202020"
             MinWidth="307" MinHeight="400"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderThickness="1" BorderBrush="#33FFFFFF"
        CornerRadius="12">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="NODE EDITOR" 
                       FontWeight="Bold" 
                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                       TextAlignment="Center" VerticalAlignment="Center"/>


        </Grid>
    </Border>
</UserControl>
